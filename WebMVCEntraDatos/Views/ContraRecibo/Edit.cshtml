@model WebMVCEntraDatos.Models.ContraRecibo

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div class="container">
        <h2>Editar ContraRecibo</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="control-label">Fecha</label>
                @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label">Obra</label>
                @Html.EditorFor(model => model.Obra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Obra, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label">Extra</label>
                @Html.EditorFor(model => model.Extra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Extra, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
            </div>
        }

        <div>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Regresar a la Lista</a>
        </div>
    </div>
</body>
</html>
