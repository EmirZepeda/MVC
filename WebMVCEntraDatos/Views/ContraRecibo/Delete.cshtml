@model WebMVCEntraDatos.Models.ContraRecibo

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <div class="container">
        <h2>Eliminar ContraRecibo</h2>

        <div>
            <h4>¿Estás seguro de que deseas eliminar este registro?</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Fecha
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Fecha)
                </dd>
                <dt>
                    Obra
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Obra)
                </dd>
                <dt>
                    Extra
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Extra)
                </dd>
            </dl>

            @using (Html.BeginForm("Delete", "ContraRecibo", new { id = Model.IdContrarecibo }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
